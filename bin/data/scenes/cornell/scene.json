{
	"import": "/scene.json",
	"assets": [
		"./loading.json"
	],
	"system": {
		"hot reload": {
			"enabled": true
		},
		"renderer": {
			"clear values": [
				[ 0, 0, 0, 0 ]
			],
			"shader": {
				"mode": 1,
				"scalar": 16,
				"parameters": [ 0, 0, 0, "time" ]
			}
		}
	},
	"metadata": {
