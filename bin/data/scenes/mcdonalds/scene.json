{
	"import": "/scene.json",
	"assets": [
		"./audio/soundscape/ambience.ogg",
		"./loading.json",
		"./static.json"
	],
	"system": {
		"hot reload": {
			"enabled": true
		},
		"renderer": {
			"shader": {
				"mode": 1,
				"scalar": 16,
				"parameters": [ 0, 0, 0, "time" ]
			},
			"clear values": [
				[ 1, 1, 1, 0 ]
			]
		}
	},
	"metadata": {
		"menus": {
			"pause": "/gui/pause/menu.json"
		},
		"volumes": {
			"sfx": 0.25,
			"bgm": 0.75,
			"voice": 1.0
		},
		"light": {
			"exposure": 1.0,
			"gamma": 1.0,

			"ambient": [ 0.1, 0.1, 0.1 ],

			"fog": {
				"color": [ 0.5, 0.5, 0.5 ],
				"range": [ 16, 32 ],
				"step scale": 2,
				"absorbtion": 0.07,
				"density": {
					"threshold": 0.35,
					"multiplier": 5.0,
					"scale": 25.0,
					"offset": [0, -1, 1],
					"timescale": 8
				}
			},
			"should": true,
			"shadows": true
		},
		"noise": {
			"size": [ 32, 32, 32 ]
		}
	}
}